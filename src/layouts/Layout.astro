---
import "../styles/index.css";
import { Footer, Nav } from "../components";

const { title } = Astro.slots;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <title>{title}</title>
  </head>
  <body>
    <slot name="header">
      <header>
        <Nav />
      </header>
    </slot>

    <slot name="main" />

    <slot name="footer">
      <Footer />
    </slot>
  </body>
</html>
