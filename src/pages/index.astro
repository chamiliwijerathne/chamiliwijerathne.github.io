---
import { Layout } from "../layouts";
import { BgYellow } from "../assets/icons";
import { Button } from "../components";
import { LINKEDIN_URL } from "../constants";
---

<Layout>
  <div slot="main" class="px-30">
    <BgYellow />
    <div class="mt-8 max-w-[700px]">
      <p class="text-xl font-bold text-primary-500 mb-3">UI/UX DESIGNER</p>
      <h1 class="mb-6">Hello, my name is Chamili Wijerathne</h1>
      <p class="text-2xl text-neutral-400">
        Short text with details about you, what you do or your professional
        career. You can add more information on the about page.
      </p>
      <div class="flex space-x-4 mt-8">
        <Button text="Projects" href={{ url: "/projects" }} />
        <Button text="LinkedIn" href={{ url: LINKEDIN_URL, targetBlank: true }} type="secondary" />
      </div>
    </div>
  </div>
</Layout>
