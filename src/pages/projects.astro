---
import { HeroSection } from '../components/sections/hero';
import type { HeroSectionType } from '../components/sections/hero';
import { Layout } from '../layouts';
import { projectsPage } from '../content/projectsPage';
import { SectionTemplate } from '../components/sections/sectionTemplate';

const { heroSection, projectsSection } = projectsPage;
---

<Layout bodyClassNames={['projects']}>
   <main slot="main" class="projects-main" id="projects">
      <HeroSection {...heroSection  as HeroSectionType} />

      <SectionTemplate {...projectsSection} />
   </main>
</Layout>
